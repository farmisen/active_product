begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "active_product"
    gem.version = "0.0.2"
    gem.summary = "E-commerce Product support from Spree"
    gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*"]
  end
rescue
  puts "Jeweler or one of its dependencies is not installed"
end
